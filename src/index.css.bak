@import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700;800;900&family=Lato:wght@300;400;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 20 14% 8%;
    --foreground: 40 80% 90%;
    --card: 20 14% 12%;
    --card-foreground: 40 80% 90%;
    --popover: 20 14% 12%;
    --popover-foreground: 40 80% 90%;
    --primary: 38 78% 55%;
    --primary-foreground: 20 14% 8%;
    --secondary: 25 30% 25%;
    --secondary-foreground: 40 80% 90%;
    --muted: 25 20% 20%;
    --muted-foreground: 40 50% 60%;
    --accent: 38 78% 45%;
    --accent-foreground: 20 14% 8%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 40 80% 90%;
    --border: 25 25% 25%;
    --input: 25 25% 25%;
    --ring: 38 78% 55%;
    --radius: 0.5rem;
    /* Egyptian theme tokens for UI components */
    --gold: 38 78% 55%;
    --gold-dark: 38 60% 40%;
    --gold-light: 43 85% 65%;
    --lapis: 220 45% 35%;
    --lapis-light: 220 40% 50%;
    --lapis-deep: 220 50% 22%;
    --turquoise: 175 45% 42%;
    --turquoise-glow: 175 55% 55%;
    --papyrus: 40 35% 88%;
    --papyrus-dark: 38 25% 75%;
    --obsidian: 20 14% 8%;
    --sandstone: 35 30% 70%;
    --terracotta: 15 55% 45%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
    font-feature-settings: "rlig" 1, "calt" 1;
    overflow-x: hidden;
  }
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
  
  .hieroglyph-bg {
    background-image: 
      repeating-linear-gradient(
        90deg,
        rgba(218, 165, 32, 0.03) 0px,
        transparent 1px,
        transparent 40px,
        rgba(218, 165, 32, 0.03) 41px
      ),
      repeating-linear-gradient(
        0deg,
        rgba(218, 165, 32, 0.03) 0px,
        transparent 1px,
        transparent 40px,
        rgba(218, 165, 32, 0.03) 41px
      );
  }
  
  .gold-glow {
    text-shadow: 0 0 20px rgba(218, 165, 32, 0.5),
                 0 0 40px rgba(218, 165, 32, 0.3);
  }

  .scroll-smooth {
    scroll-behavior: smooth;
  }

  .hieroglyph-pattern {
    background-image:
      repeating-linear-gradient(
        90deg,
        rgba(218, 165, 32, 0.04) 0px,
        transparent 1px,
        transparent 32px,
        rgba(218, 165, 32, 0.04) 33px
      ),
      repeating-linear-gradient(
        0deg,
        rgba(218, 165, 32, 0.04) 0px,
        transparent 1px,
        transparent 32px,
        rgba(218, 165, 32, 0.04) 33px
      );
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%); opacity: 0.3; }
    100% { transform: translateX(100%); opacity: 0.6; }
  }
  .animate-shimmer {
    animation: shimmer 2s ease-in-out infinite;
  }
  .bg-shimmer-gold {
    background: linear-gradient(
      90deg,
      transparent,
      hsl(var(--gold) / 0.2),
      transparent
    );
  }
  .text-gold-gradient {
    background: linear-gradient(
      135deg,
      hsl(var(--gold-light)),
      hsl(var(--gold))
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
}

::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: hsl(var(--background));
}

::-webkit-scrollbar-thumb {
  background: hsl(var(--primary) / 0.5);
  border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
  background: hsl(var(--primary));
}

::selection {
  background-color: hsl(var(--primary) / 0.3);
  color: hsl(var(--foreground));
}

* {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}